<h1>Burgers!</h1>
<img src="./assets/img/burger.jpg" alt="burger">

<h2>Ready to eat!</h2>

<ul>
    {{#each burgers}}
    {{#unless this.devoured}}
    <li>{{burger_name}}</li>
    <button data-burger="{{id}}" class="btn btn-default btn-lg devour-btn">Devour it!</button>
    {{/unless}}
    {{/each}}
</ul>

<h2>Devoured!</h2>

<ul>
    {{#each burgers}}
    {{#if this.devoured}}
    <li>{{burger_name}}</li>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>


    <button type="submit">Add burger</button>
</form>