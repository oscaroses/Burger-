<div class="jumbotron">
    <h1 class="display-4">Burger Time!</h1>
    <hr class="my-4">
    <img src="./assets/img/burger.jpg" alt="burger">
    <form class="create-form">

        <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
        </div>


        <button type="submit">Add burger</button>
    </form>
</div>

<div class="card-group">
    <div class="card">
        <img src="..." class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">Ready to Eat!</h5>
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>{{burger_name}}</li>
                <button data-burger="{{id}}" class="btn btn-default btn-lg devour-btn">Devour it!</button>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="card">
            <img src="..." class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">Devoured</h5>
                <ul>
                    {{#each burgers}}
                    {{#if this.devoured}}
                    <li>{{burger_name}}</li>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>